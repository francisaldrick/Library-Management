<div class="container" style="margin:150px 450px 0px 450px; background-color:white; padding:2%">
<h1 align="center">Book Details</h1>

<div class="form-group">
<%= form_with scope: :library, local: true do |form| %>

  <div class="form-group">
    <%= form.label :ISBN, value="ISBN" %><br>
    <%= form.text_field :ISBN, class: "form-control", placeholder: "ISBN" %>
  </div>

  <div class="form-group">
    <%= form.label :Book,value="Book Name" %><br>
    <%= form.text_field :Bookname , class: "form-control", placeholder: "Bookname " %>
  </div>
 
  <div class="form-group">
    <%= form.label :Author, value="Author Name" %><br>
    <%= form.text_field :Authorname, class: "form-control", placeholder: "Authorname" %>
  </div>

  <div class="form-group">
    <%= form.label :Description, value="Description" %><br>
    <%= form.text_field :Description, class: "form-control", placeholder: "Description" %>
  </div>
 
  <div>
    <%= form.submit :Save, class: "btn btn-primary"%>
  </div>
<% end %>
